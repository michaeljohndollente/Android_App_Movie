<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardActor"
        android:layout_width="match_parent"
        android:layout_height="329dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:background="#B4AEE8">


            <ImageView
                android:id="@+id/imgActor"
                android:layout_width="156dp"
                android:layout_height="123dp"
                android:contentDescription="@string/image_viewer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.093"
                tools:src="@color/black" />

            <TextView
                android:id="@+id/txtFirstname"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:layout_marginStart="36dp"
                android:text="First name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgActor"
                app:layout_constraintVertical_bias="0.176" />

            <TextView
                android:id="@+id/txtLastname"
                android:layout_width="71dp"
                android:layout_height="56dp"
                android:layout_marginStart="36dp"
                android:text="Last Name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFirstname"
                app:layout_constraintVertical_bias="0.49" />

            <ImageButton
                android:id="@+id/btnEditActor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgActor"
                app:layout_constraintVertical_bias="0.105" />

            <ImageButton
                android:id="@+id/btnDelActor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_baseline_delete_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEditActor"
                app:layout_constraintVertical_bias="0.582" />

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="191dp"
                android:layout_height="142dp"
                android:layout_marginStart="12dp"
                android:text="Note"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtFirstname"
                app:layout_constraintTop_toBottomOf="@+id/imgActor"
                app:layout_constraintVertical_bias="0.541" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>